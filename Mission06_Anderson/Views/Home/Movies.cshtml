@model Submission

<h1 class="text-center display-4">Movie submission</h1>

<!--Input form for Movie information-->
<form class="text-center" method="post">

    <div class="form-group row">
        <label asp-for="Category" class="col-sm-3 col-form-label">Category<span class="text-danger">*</span></label>
        <div class="col-sm-9">
            <input asp-for="Category" class="form-control" required placeholder="Action">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Category2" class="col-sm-3 col-form-label">Secondary Category</label>
        <div class="col-sm-9">
            <input asp-for="Category2" class="form-control" placeholder="Adventure">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Title" class="col-sm-3 col-form-label">Title<span class="text-danger">*</span></label>
        <div class="col-sm-9">
            <input asp-for="Title" class="form-control" required placeholder="Name of movie">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Year" class="col-sm-3 col-form-label">Year<span class="text-danger">*</span></label>
        <div class="col-sm-9">
            <input asp-for="Year" class="form-control" required placeholder="2003">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Director" class="col-sm-3 col-form-label">Director<span class="text-danger">*</span></label>
        <div class="col-sm-9">
            <input asp-for="Director" class="form-control" required placeholder="Directors Full Name">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Rating" class="col-sm-3 col-form-label">Rating<span class="text-danger">*</span></label>
        <div class="col-sm-9">
            <select asp-for="Rating" class="form-control" required>
                <option value="" selected disabled>-- Select Rating --</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Edited" class="col-sm-3 col-form-label">Edited</label>
        <div class="col-sm-9">
            <select asp-for="Edited" class="form-control">
                <option value="" selected>--Edited--</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Lent" class="col-sm-3 col-form-label">Lent to</label>
        <div class="col-sm-9">
            <input asp-for="Lent" class="form-control" placeholder="Enter who you have lent it to">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Notes" class="col-sm-3 col-form-label">Notes</label>
        <div class="col-sm-9">
            <input asp-for="Notes" class="form-control" maxlength="25"/>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
